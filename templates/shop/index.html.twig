{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <h1>Shop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.id }}</td>
                <td>{{ shop.title }}</td>
                <td>{{ shop.description }}</td>
                <td>{{ shop.createdAt ? shop.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ shop.updatedAt ? shop.updatedAt|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('app_shop_show', {'id': shop.id}) }}">show</a>
                    <a href="{{ path('app_shop_edit', {'id': shop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shop_new') }}">Create new</a>
{% endblock %}
